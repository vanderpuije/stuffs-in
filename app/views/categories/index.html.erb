<h1 align="center">All Categories</h1>

<div align="center">
	<% @categories.each do |category| %>
		<ul>
			<li>
				<%= link_to category.name, category_path(category) %> 
			</li>		
			<li><small><%= pluralize(category.products.count, "products") %></small></li>	
		</ul>
	<% end %>
</div>

<div align="center">
	<%= will_paginate %>
</div>
